<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/brovko"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/logo"
            android:layout_width="@dimen/logo_size_medium"
            android:layout_height="@dimen/logo_size_medium"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/margain_top_large"
            android:layout_marginBottom="@dimen/margain_bottom_small"
            app:srcCompat="@drawable/logo2" />

        <TextView
            android:id="@+id/slogan"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:gravity="center_horizontal"
            android:text="@string/text_slogan"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/medium_text2"
            android:textStyle="italic" />


        <Button
            android:id="@+id/buttonToNavigator"
            style="@style/rtsButton"
            android:text="@string/button_text_russian_master" />

        <!--            -->
        <!--            <Button-->
        <!--                android:id="@+id/buttonWords"-->
        <!--                style="@style/rtsButton"-->
        <!--                android:text="@string/button_text_prospect_of_development" />-->

        <Button
            android:id="@+id/buttoonadd"
            style="@style/rtsButton"
            android:text="@string/button_text_image_studio" />

        <Button
            android:id="@+id/buttooninst"
            style="@style/rtsButton"
            android:text="@string/button_text_instagram" />

        <Button
            android:id="@+id/buttonHelper"
            style="@style/rtsButton"
            android:layout_marginBottom="@dimen/margain_bottom_small"
            android:text="@string/button_text_useful_links" />

    </LinearLayout>

</ScrollView>