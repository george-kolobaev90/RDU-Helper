<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fedka"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/academy"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/margain_top_small"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:src="@drawable/academy" />

            <ImageButton
                android:id="@+id/artfly"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/margain_top_small"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:src="@drawable/artfly2019" />

            <ImageButton
                android:id="@+id/chursina"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/margain_top_small"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:src="@drawable/chursina2" />

            <ImageButton
                android:id="@+id/maximum"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/margain_top_small"
                android:layout_marginBottom="@dimen/margain_bottom_small"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:src="@drawable/maximum2" />


        </LinearLayout>

    </ScrollView>

</LinearLayout>